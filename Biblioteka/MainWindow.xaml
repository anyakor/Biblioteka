<Window x:Class="Biblioteka.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Библиотека" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1e1e1e">

    <Grid>
        <!-- Левое меню -->
        <Grid Width="200" Background="#2d2d30" HorizontalAlignment="Left">
            <StackPanel VerticalAlignment="Top" Margin="0">
                <TextBlock Text="Меню" FontSize="20" Foreground="White"
                           FontWeight="Bold" Margin="20,20,0,20"/>
                <Button Content="Книги" Click="Books_Click" Margin="10,0,10,10" Height="40"
                        Background="#3c3c3c" Foreground="White" BorderThickness="0"
                        FontSize="16" Cursor="Hand"/>
                <Button Content="Читатели" Click="Readers_Click" Margin="10,0,10,10" Height="40"
                        Background="#3c3c3c" Foreground="White" BorderThickness="0"
                        FontSize="16" Cursor="Hand"/>
                <Button Content="Выдача" Click="Loans_Click" Margin="10,0,10,10" Height="40"
                        Background="#3c3c3c" Foreground="White" BorderThickness="0"
                        FontSize="16" Cursor="Hand"/>
                <Button Content="Отчёты" Click="Reports_Click" Margin="10,0,10,10" Height="40"
                        Background="#3c3c3c" Foreground="White" BorderThickness="0"
                        FontSize="16" Cursor="Hand"/>
            </StackPanel>
        </Grid>

        <!-- Контент -->
        <Frame x:Name="MainFrame" Margin="200,0,0,0" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
